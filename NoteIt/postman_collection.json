{
	"info": {
		"_postman_id": "your-collection-id",
		"name": "Auth Service",
		"schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
	},
	"item": [
		{
			"name": "Login",
			"request": {
				"method": "POST",
				"header": [
					{
						"key": "Content-Type",
						"value": "application/json"
					}
				],
				"body": {
					"mode": "raw",
					"raw": "{\n    \"email\": \"your.email@example.com\",\n    \"password\": \"your_password\"\n}"
				},
				"url": {
					"raw": "http://localhost:8080/auth/login",
					"protocol": "http",
					"host": ["localhost"],
					"port": "8080",
					"path": ["auth", "login"]
				}
			}
		},
		{
			"name": "Refresh Token",
			"request": {
				"method": "POST",
				"header": [
					{
						"key": "Authorization",
						"value": "Bearer {{refresh_token}}"
					}
				],
				"url": {
					"raw": "http://localhost:8080/api/v1/token/refresh",
					"protocol": "http",
					"host": ["localhost"],
					"port": "8080",
					"path": ["api", "v1", "token", "refresh"]
				}
			}
		},
		{
			"name": "Revoke Token",
			"request": {
				"method": "POST",
				"header": [
					{
						"key": "Authorization",
						"value": "Bearer {{refresh_token}}"
					}
				],
				"url": {
					"raw": "http://localhost:8080/api/v1/token/revoke",
					"protocol": "http",
					"host": ["localhost"],
					"port": "8080",
					"path": ["api", "v1", "token", "revoke"]
				}
			}
		}
	],
	"variable": [
		{
			"key": "refresh_token",
			"value": "your_refresh_token_here"
		}
	]
} 